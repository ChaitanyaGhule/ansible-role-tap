# Apache Virtual Host Configuration for {{ market | upper }} market
# Generated by Ansible TAP Role

<VirtualHost *:{{ tap_apache_port }}>
    ServerName {{ tap_markets[market].backend_domain }}
    DocumentRoot {{ tap_backend_path }}/public
    
    RewriteEngine {{ tap_apache_rewrite_engine }}
    RewriteCond %{SERVER_NAME} ={{ tap_markets[market].backend_domain }}
    RewriteRule ^ https://%{SERVER_NAME}%{REQUEST_URI}[END,NE,R={{ tap_apache_redirect_type }}]
</VirtualHost>

<VirtualHost *:{{ tap_apache_port }}>
    ServerName {{ tap_markets[market].frontend_domain }}
    ServerAlias {{ tap_markets[market].frontend_domain_www }}
    DocumentRoot {{ tap_frontend_path }}/dist/production
    
    RewriteEngine {{ tap_apache_rewrite_engine }}
    RewriteCond %{SERVER_NAME} ={{ tap_markets[market].frontend_domain }} [OR]
    RewriteCond %{SERVER_NAME} ={{ tap_markets[market].frontend_domain_www }}
    RewriteRule ^ https://%{SERVER_NAME}%{REQUEST_URI} [END,NE,R={{ tap_apache_redirect_type }}]
</VirtualHost>